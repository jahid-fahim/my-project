#include<bits/stdc++.h>
using namespace std;

#define ll long long
#define pi 3.14159265
#define pb push_back


int main()
{
    int t,ans,i,c,n,p,a,b;
    //ll a,b,c,d,up,down,l,r,t,t1,t2,ans,ans1,ans2,w,h,w1,w2,h1,h2;
    //char c;
    //int x,m,j,i,t,c,p;
    cin>>t;
    //string s,s2;
    while(t--)
    {
        ans=c=0;
        cin>>n;
        int mx=INT_MIN;
        int mn=INT_MAX;
        while(n--)
        {
            cin>>a>>b;
            mx=max(a,mx);
            mn=min(b,mn);
        }
        if(n==1)
        {
            cout<<"0"<<endl;
        }
        else if(mn<mx)
            cout<<mx-mn<<endl;
        else
            cout<<"0"<<endl;
    }

 return 0;
}
