#include<bits/stdc++.h>
#include <sstream>
using namespace std;

#define ll long long
#define pi 3.14159265
#define pb push_back


int main()
{
    ll t,a,b,c;
    cin>>t;
    while(t--)
    {
        c=0;
        cin>>a>>b;
        if(a!=0 && b!=0)
        {
            if(a+b<4)
            {
                cout<<"0"<<endl;
                continue;
            }
            else
            {
                c=(a+b)/4;
                cout<<min(a,min(b,c))<<endl;
                continue;
            }
        }
        else
        {
            cout<<"0"<<endl;
            continue;
        }
    }
    
    return 0;
}
//Alhamdulillah

