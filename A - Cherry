#include<bits/stdc++.h>
using namespace std;

#define ll long long
#define pi 3.14159265
#define pb push_back


int main()
{
    //ll t,x,y,j,i,z,p=0,q=0,d,mx=0;
    ll n,m,p,i,j,mx,t=0,ans,k,d;
    //char c;
    cin>>t;
    //string s,s1;

    while(t--)
    {
        ans=0;
        mx=-1;
        cin>>n;
        ll a[n];
        for(i=0; i<n; i++)
        {
            cin>>a[i];
        }
        for(i=0; i<n-1; i++)
        {
            ans=a[i]*a[i+1];
            mx=max(ans,mx);
        }
        cout<<mx<<endl;
    }

 return 0;
}
