#include<bits/stdc++.h>
using namespace std;
 
#define ll long long
#define pi 3.14159265
#define pb push_back
 
 
int main()
{
    //ll t,x,y,j,i,z,p=0,q=0,d,mx=0;
    ll n,m,k,e,o,t=0,c=1,p;
    cin>>t;
    while(t--)
    {
        e=o=0;
        cin>>n;
        p=2*n;
        while(p--)
        {
            cin>>m;
            if(m%2==0)
                e++;
            else
                o++;
        }
        if(o==e)
            cout<<"YES"<<endl;
        else
            cout<<"NO"<<endl;
    }
 
return 0;
}
