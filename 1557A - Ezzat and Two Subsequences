#include<bits/stdc++.h>
using namespace std;

#define ll long long
#define pi 3.14159265
#define pb push_back


int main()
{
    //ll t,x,y,j,i,z,p=0,q=0,d,mx=0;
    //ll a,b,c,d,up,down,l,r,t,t1,t2,ans,ans1,ans2,w,h,w1,w2,h1,h2;
    //char c;
    ll t,mx,j,sum,d,a,p,c,n,i;
    cin>>t;
    //string s;
    float avg1;
    while(t--)
    {
        sum=0;
        mx=INT_MIN;
        cin>>n;
        for(i=0; i<n; i++)
        {
            cin>>a;
            sum+=a;
            mx=max(mx,a);
        }
        sum-=mx;
        avg1=(float)sum/(float)(n-1);
        printf("%.9f\n",avg1+mx);
    }

 return 0;
}
