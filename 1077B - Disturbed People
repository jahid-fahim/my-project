#include<bits/stdc++.h>
using namespace std;

#define ll long long
#define pi 3.14159265
#define pb push_back


int main()
{
    //ll t,x,y,j,i,z,p=0,q=0,d,mx=0;
    ll n,m,k,i,j,c=0,ans=0,t=0,m1,m0;
    //int a,b;
    cin>>n;
    char a[n];
    for(i=0; i<n; i++)
    {
        cin>>a[i];
    }
    for(i=1; i<n-1; i++)
    {
        if(a[i]=='0')
        {
            if(a[i-1]=='1' && a[i+1]=='1')
            {
                c++;
                a[i+1]='0';
            }
        }
    }
    cout<<c<<endl;

return 0;
}
