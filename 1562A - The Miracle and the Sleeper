#include<bits/stdc++.h>
using namespace std;

#define ll long long
#define pi 3.14159265
#define pb push_back


int main()
{
    //ll t,x,y,x1,y1,x2,y2,a,b,c,d,xx,yy;
    //ll a,b,c,d,up,down,l,r,t,t1,t2,ans,ans1,ans2,w,h,w1,w2,h1,h2;
    //char c;
    ll l,r,j,i,t,c,p;
    cin>>t;
    //string s;
    while(t--)
    {
        c=p=0;
        cin>>l>>r;
        if(l==r || (l==1 && r==2))
            cout<<"0"<<endl;
        else if(l>r/2)cout<<r-l<<endl;
        else
        {
            p=r/2+1;
            if(p>=l && p<=r)
                cout<<r-p<<endl;
            else
                cout<<"1"<<endl;

        }
    }

 return 0;
}
